					<imagetype name="background">
						<filename>images/widgets/checkbox_active.png</filename>
					</imagetype>
					<imagetype name="arrow">
						<filename>images/shared/arrow_right.png</filename>
						<alpha>255</alpha>
					</imagetype>
				</state>
			</statetype>
		</button>
				
